          .modal-body
            p Enter your email address to gain access to Nutshell when it is released
            form
              .input-group
                input.form-control(type='text', placeholder='bobby@example.com')
          .modal-footer.cta
            button.btn.btn-lg(type='button', data-dismiss='modal', aria-label='Close') Submit

    nav.navbar.navbar-default.main-nav
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(data-toggle='collapse' data-target='#nav-target')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/').logo Nutshell
        .collapse.navbar-collapse#nav-target(aria-expanded="false" style="height: 1px;")
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/about') About
            li.divider
            li
              a(href='/faq') FAQ

